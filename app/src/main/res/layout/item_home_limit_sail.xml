<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingTop="15dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/product_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品名称"
        android:id="@+id/product_name"
        android:textColor="@color/global_text"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_normal"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignTop="@id/product_photo"
        android:layout_toRightOf="@id/product_photo"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日价格: 40.00"
        android:id="@+id/product_price"
        android:textColor="@color/orange"
        android:layout_below="@id/product_name"
        android:layout_alignLeft="@id/product_name"
        android:layout_alignStart="@id/product_name"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="查看详情"
        android:textSize="@dimen/text_small"
        android:id="@+id/detail_btn"
        android:background="@drawable/product_detail_bg"
        android:textColor="@color/white"
        android:layout_alignBottom="@id/product_photo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/product_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
