<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:background="@drawable/item_bg"
    android:id="@+id/item_profile_layout"
    android:layout_marginBottom="4dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <TextView
        android:id="@+id/item_profile_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:maxLength="8"
        android:textSize="@dimen/text_14"
        android:textColor="@color/global_text"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="text"/>

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp"
        android:layout_centerVertical="true"
        android:textColor="@color/angle_right_color"
        android:text="@string/fa_angle_right"
        android:textSize="22sp"/>

    <ImageView
        android:id="@+id/item_profile_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/user_default"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/indicator"
        android:layout_marginRight="16dp"/>
</RelativeLayout>