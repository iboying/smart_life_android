<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cell_bg"
    android:padding="10dp">
    <ImageView
        android:id="@+id/cell_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:src="@drawable/me_order"/>

    <TextView
        android:id="@+id/cell_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="8"
        android:layout_toRightOf="@id/cell_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="text"/>

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/angle_right_color"
        android:text="{fa-angle-right}"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/cell_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/indicator"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxLength="20"
        android:text="341621199205032917"/>

</RelativeLayout>