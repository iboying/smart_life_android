<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_app_bg"
    android:layout_marginBottom="2dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/order_commodity_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:src="@drawable/on_sail"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/order_commodity_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:textColor="@color/global_text"
        android:textSize="@dimen/text_12"
        android:text="紫云英蜂蜜"
        android:layout_toRightOf="@id/order_commodity_image"/>
    <TextView
        android:id="@+id/order_commodity_price"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/global_text"
        android:textSize="@dimen/text_12"
        android:text="￥30.5"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/order_commodity_original_price"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/order_commodity_price"
        android:textColor="@color/global_text"
        android:autoLink="all"
        android:textSize="@dimen/text_12"
        android:text="￥30.5"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/order_commodity_count"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@color/global_text"
        android:text="x 1"
        android:textSize="@dimen/text_10"
        android:layout_below="@id/order_commodity_original_price"
        android:layout_alignParentRight="true"/>

</RelativeLayout>