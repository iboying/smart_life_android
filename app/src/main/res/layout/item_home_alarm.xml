<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/alarm_thumb"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/alarm_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/alarm_dot"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/alarm_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/global_text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:lineSpacingExtra="3sp"
        android:textSize="@dimen/text_14"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignTop="@id/alarm_thumb"
        android:layout_toRightOf="@id/alarm_thumb"
        android:layout_toLeftOf="@id/alarm_dot"/>

    <TextView
        android:id="@+id/alarm_time"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="right"
        android:textSize="@dimen/text_12"
        android:textColor="@color/gray_text"
        android:layout_toRightOf="@id/alarm_thumb"
        android:layout_below="@id/alarm_title"/>
</RelativeLayout>