<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="false">

    <include layout="@layout/toolbar"/>

    <!--主体内容-->
    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/link_to_addresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/item_bg"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:padding="16dp">
            <ImageView
                android:id="@+id/address_icon"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginRight="16dp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:src="@drawable/address_icon"/>
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/address_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/angle_right_color"
                android:text="{fa-angle-right}"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/order_address"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:textColor="@color/global_text"
                android:layout_toRightOf="@id/address_icon"
                android:layout_toLeftOf="@id/address_indicator"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_14"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="XX区XX街道XX (小区名称) XX栋XX单元XXX室"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/submit_order_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/submit_order"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_16"
                android:text="提交订单"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/orange"
                android:layout_toLeftOf="@id/submit_order"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/global_text"
                android:layout_toLeftOf="@id/total_price"
                android:layout_centerVertical="true"
                android:text="合计:"
                android:id="@+id/textView5"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/submit_order_list"
            android:scrollbars="vertical"
            android:layout_above="@id/submit_order_layout"
            android:layout_below="@id/link_to_addresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>