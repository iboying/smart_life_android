<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_marginBottom="4dp">
    <TextView
        android:id="@+id/pay_way"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text=" 微信"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/order_image"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/pay_way_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付方式："
        android:layout_marginBottom="5dp"
        android:layout_below="@id/order_image"
        android:layout_toLeftOf="@+id/pay_way"
        android:layout_toStartOf="@+id/pay_way"/>
    <TextView
        android:id="@+id/pay_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text=" ￥30.5"
        android:textColor="@color/orange"
        android:layout_below="@id/pay_way"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/pay_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应付金额："
        android:layout_below="@id/pay_way_text"
        android:layout_toLeftOf="@+id/pay_price"/>

</RelativeLayout>