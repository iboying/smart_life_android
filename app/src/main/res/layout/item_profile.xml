<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/item_bg"
        android:clickable="true"
        android:id="@+id/item_profile_layout"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:id="@+id/item_profile_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dp"
            android:maxLength="8"
            android:textSize="@dimen/text_14"
            android:textColor="@color/global_text"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="text"/>
        <TextView
            android:id="@+id/item_profile_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/indicator"
            android:layout_marginRight="16dp"
            android:textSize="@dimen/text_14"
            android:textColor="@color/gray_text"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxLength="20"
            android:text="341621199205032917"/>
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textColor="@color/angle_right_color"
            android:text="@string/fa_angle_right"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/profile_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_bg"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/profile_gap"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:visibility="gone"
        android:background="@color/app_bg"/>
</LinearLayout>