<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="false">

    <include layout="@layout/toolbar"/>

    <!--主体内容-->
    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/cart_buy_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/pay_now"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_16"
                android:text="@string/pay_now"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/order_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/orange"
                android:layout_toLeftOf="@id/pay_now"
                android:layout_centerVertical="true"
                android:text="0"
                android:paddingLeft="5dp"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/global_text"
                android:layout_toLeftOf="@id/order_total_price"
                android:layout_centerVertical="true"
                android:text="@string/pay_text"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="4dp"
            android:padding="12dp">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/global_text"
                android:layout_alignParentLeft="true"
                android:text="订单号："
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/gray_text"
                android:text="2013123456"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/textView1"
                android:background="@color/gray"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/global_text"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/line1"
                android:text="商品金额："/>
            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/gray_text"
                android:text="RMB 299"
                android:layout_below="@+id/line1"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"/>
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/textView2"
                android:background="@color/gray"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/global_text"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/line2"
                android:text="配送费用："/>
            <TextView
                android:id="@+id/order_postage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:textColor="@color/gray_text"
                android:text="+ 8.0"
                android:layout_below="@+id/line2"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/textView4"
                android:layout_toEndOf="@+id/textView4"/>
            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/textView4"
                android:background="@color/gray"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:layout_marginBottom="12dp"
                android:textColor="@color/global_text"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/line3"
                android:text="支付方式"/>

            <RadioGroup
                android:id="@+id/pay_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 支付宝支付"
                    android:id="@+id/alipay"
                    android:textColor="@color/global_text"
                    android:drawableLeft="@mipmap/ic_alipay"
                    android:textSize="@dimen/text_14"
                    android:checked="true"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 微信支付"
                    android:id="@+id/weixin_pay"
                    android:textColor="@color/global_text"
                    android:drawableLeft="@mipmap/ic_wechat_pay"
                    android:textSize="@dimen/text_14"
                    android:checked="false"/>
            </RadioGroup>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>